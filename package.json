{
  "name": "topolo",
  "version": "0.0.4",
  "author": "Gregory Benner <gregbenner1@gmail.com> (https://github.com/Klathmon)",
  "license": "MIT",
  "description": "A simple task runner",
  "scripts": {
    "build": "topolo build",
    "test": "topolo test"
  },
  "bin": {
    "topolo": "dist/topolo.js"
  },
  "topolo": {
    "test": {
      "command": "nyc --require babel-register mocha test/*.js",
      "env": {
        "NODE_ENV": "test"
      },
      "dependencies": [
        "clean"
      ]
    },
    "build": {
      "command": "webpack",
      "env": {
        "NODE_ENV": "production"
      },
      "dependencies": [
        "clean"
      ]
    },
    "clean": {
      "command": "rimraf dist .nyc_output coverage"
    }
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "describe",
      "it",
      "before",
      "after",
      "beforeEach",
      "afterEach"
    ]
  },
  "babel": {
    "plugins": [
      "transform-runtime"
    ],
    "presets": [
      "es2015",
      "stage-2"
    ]
  },
  "dependencies": {
    "cross-spawn": "4.0.0",
    "es6-promisify": "4.1.0"
  },
  "devDependencies": {
    "babel-cli": "6.14.0",
    "babel-core": "6.14.0",
    "babel-loader": "6.2.5",
    "babel-plugin-lodash": "3.2.8",
    "babel-plugin-transform-runtime": "6.12.0",
    "babel-preset-es2015": "6.14.0",
    "babel-preset-stage-2": "6.13.0",
    "babel-register": "6.14.0",
    "chai": "3.5.0",
    "chalk": "1.1.3",
    "commander": "2.9.0",
    "json-loader": "0.5.4",
    "lodash": "4.15.0",
    "mocha": "3.0.2",
    "moment": "2.14.1",
    "nyc": "8.1.0",
    "progress-bar-webpack-plugin": "1.9.0",
    "spawn-args": "0.2.0",
    "standard": "8.0.0",
    "topolo": "0.0.4",
    "webpack": "2.1.0-beta.21"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Klathmon/topolo.git"
  },
  "keywords": [
    "build system",
    "task runner"
  ],
  "bugs": {
    "url": "https://github.com/Klathmon/topolo/issues"
  },
  "homepage": "https://github.com/Klathmon/topolo#readme"
}
