{
  "name": "topolo",
  "version": "0.0.16",
  "author": "Gregory Benner <gregbenner1@gmail.com> (https://github.com/Klathmon)",
  "license": "MIT",
  "description": "A simple task runner",
  "scripts": {
    "pub": "topolo publish",
    "dev": "node ./test/manualTestDev.js build",
    "build": "topolo build",
    "test": "topolo test",
    "testWatch": "topolo test:--watch",
    "clean": "topolo clean",
    "showCoverage": "topolo showCoverage",
    "prepublish": "topolo build"
  },
  "bin": {
    "topolo": "dist/topolo.js"
  },
  "topolo": {
    "showCoverage": {
      "command": "simplehttpserver coverage",
      "before": [
        "opn"
      ],
      "optionalBefore": [
        "test"
      ]
    },
    "test": {
      "command": "nyc mocha $1 test/test.js",
      "defaultValues": [
        ""
      ],
      "env": {
        "NODE_ENV": "test"
      },
      "before": [
        "clean"
      ]
    },
    "build": {
      "command": "webpack",
      "env": {
        "NODE_ENV": "production"
      },
      "before": [
        "clean"
      ]
    },
    "publish": {
      "command": "np $1 --skip-cleanup",
      "defaultValues": [
        "patch"
      ],
      "before": [
        "clean"
      ]
    },
    "clean": {
      "command": "rimraf dist .nyc_output coverage"
    },
    "opn": {
      "command": "opn http://localhost:8000"
    }
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "describe",
      "it",
      "before",
      "after",
      "beforeEach",
      "afterEach"
    ]
  },
  "babel": {
    "plugins": [
      "transform-runtime",
      "rewire"
    ],
    "presets": [
      "es2015",
      "stage-2"
    ]
  },
  "nyc": {
    "include": [
      "src/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcovonly",
      "html",
      "text"
    ],
    "all": true
  },
  "dependencies": {
    "chalk": "1.1.3",
    "cross-spawn": "4.0.0",
    "es6-promisify": "4.1.0",
    "interpret": "1.0.1",
    "liftoff": "2.3.0",
    "lodash": "4.15.0",
    "moment": "2.14.1",
    "spawn-args": "0.2.0"
  },
  "devDependencies": {
    "babel-cli": "6.14.0",
    "babel-core": "6.14.0",
    "babel-loader": "6.2.5",
    "babel-plugin-lodash": "3.2.8",
    "babel-plugin-rewire": "1.0.0-rc-6",
    "babel-plugin-transform-runtime": "6.12.0",
    "babel-preset-es2015": "6.14.0",
    "babel-preset-stage-2": "6.13.0",
    "babel-register": "6.14.0",
    "chai": "3.5.0",
    "mocha": "3.0.2",
    "np": "2.9.0",
    "nyc": "8.1.0",
    "opn-cli": "3.1.0",
    "sinon": "2.0.0-pre.2",
    "sinon-chai": "2.8.0",
    "standard": "8.0.0",
    "topolo": "0.0.16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Klathmon/topolo.git"
  },
  "keywords": [
    "build system",
    "task runner"
  ],
  "bugs": {
    "url": "https://github.com/Klathmon/topolo/issues"
  },
  "homepage": "https://github.com/Klathmon/topolo#readme"
}
